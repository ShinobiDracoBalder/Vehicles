@model Vehicles.API.Models.EditUserViewModel

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" style="float: left;text-align: center;border-radius: 60px;" placeholder="First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" style="float: left;text-align: center;border-radius: 60px;" placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DocumentTypeId" class="control-label"></label>
            <select asp-for="DocumentTypeId" asp-items="Model.DocumentTypes" class="form-control" style="float: left;text-align: center;border-radius: 60px;"></select>
            <span asp-validation-for="DocumentTypeId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Document" class="control-label"></label>
            <input asp-for="Document" class="form-control" style="float: left;text-align: center;border-radius: 60px;" placeholder="Documents" />
            <span asp-validation-for="Document" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" style="float: left;text-align: center;border-radius: 60px;" placeholder="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" style="float: left;text-align: center;border-radius: 60px;" placeholder="Phone Number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" class="form-control" type="file" style="float: left;text-align: center;border-radius: 60px;" placeholder="Pictures" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
    </div>
</div>